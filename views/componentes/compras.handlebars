<div class="modal" id="myModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
        {{#if usuario}}
      <div class="modal-header">
        <h5 class="modal-title">Bienvenida: {{usuario}}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <p>Tus cumpras el dia de hoy son:</p>
        {{#each ventas}}
        <div>
            <img src="{{this}}.png" alt="{{this}}" class="card-imag-top"
            style="width: 25%; display:inline-block; margin: auto">
            <a href="/eliminar/{{this}}">‚ùå</a>
        </div>
        {{/each}}
      </div>
      {{else}}
      <div class="modal-body">
        <p class="text-center">Para poder agregar productos al carrito, deberas ingresar a tu cuenta!!.</p>
      </div>
      {{/if}}
    </div>
  </div>
</div>